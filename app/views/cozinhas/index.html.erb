<div class="row">
  <div class="container">
    <p id="notice"><%= notice %></p>

    <div class="page-header">
      <h1 class="title">Restaurente</h1>
    </div>

    <div class="col-xs-12">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Endereco</th>
            <th>Telefone</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @cozinhas.each do |cozinha| %>
          <tr>
            <td><%= cozinha.nome %></td>
            <td><%= cozinha.endereco %></td>
            <td><%= cozinha.telefone %></td>
            <td><%= link_to 'Visualizar', cozinha, :class => "btn btn-info" %></td>
            <td><%= link_to 'Editar', edit_cozinha_path(cozinha), :class => "btn btn-primary" %></td>
            <td><%= link_to 'Deletar', cozinha, method: :delete, data: { confirm: 'Deseja realmente excluir?' }, :class => "btn btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <br>
    <div class="col-xs-12">
      <%= link_to 'Novo', new_cozinha_path, :class => "btn btn-success" %>
    </div>
  </div>
</div>
