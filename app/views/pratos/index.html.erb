<div class="">
  <div class="container">

    <p id="notice"><%= notice %></p>
    <div class="page-header">
      <h1 class="title">Pratos</h1>
    </div>

    <div class="col-xs-12">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Descricao</th>
            <th>Preco</th>
            <th>Tempo Preparo</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @pratos.each do |prato| %>
          <tr>
            <td><%= prato.descricao %></td>
            <td><%= prato.preco %></td>
            <td><%= prato.tempoPreparo %></td>
            <td><%= link_to 'Visualizar', prato, :class => "btn btn-info" %></td>
            <td><%= link_to 'Editar', edit_prato_path(prato), :class => "btn btn-primary" %></td>
            <td><%= link_to 'Deletar', prato, method: :delete, data: { confirm: 'Deseja realmente excluir?' }, :class => "btn btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <br>
    <div class="col-xs-12">
      <%= link_to 'Novo', new_prato_path, :class => "btn btn-success" %>
   </div>
 </div>
</div>